<!DOCTYPE html>
<html>
  <head>
    <title>RpiTiltRb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container mx-auto px-2 flex flex-col">
      <header class="flex justify-between my-5 text-base">
        <%= link_to 'Home', root_path, class: 'text-blue-700' %>
        <% if @current_user %>
          <div class="flex items-center">
            <%= @current_user.email %> |
            <%= button_to 'Logout', user_session_path, method: :delete, class: 'bg-sky-600 ml-1' %>
          </span>
        <% end %>
      </header>

      <%= yield %>
    </main>
  </body>
</html>
